{
  "name": "ogl",
  "version": "1.0.0",
  "description": "OGL Vanilla TypeScript Template",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "rollup -c",
    "start": "servez public",
    "dev": "concurrently --names \"ROLLUP,HTTP\" -c \"bgBlue.bold,bgGreen.bold\" \"rollup -c -w -m inline\" \"servez public\""
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-typescript": "^11.1.2",
    "concurrently": "^8.2.0",
    "prettier": "^3.0.2",
    "rollup": "^3.27.2",
    "servez": "^2.0.0",
    "tslib": "^2.6.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "ogl": "github:oframe/ogl"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "lf",
    "htmlWhitespaceSensitivity": "css",
    "printWidth": 150,
    "quoteProps": "as-needed",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "es5",
    "useTabs": false
  }
}
